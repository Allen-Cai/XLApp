<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/titleRoot"
    android:layout_width="wrap_content"
    android:layout_height="44dp"
    android:background="@color/title_green">

    <RelativeLayout
        android:id="@+id/left_layout_and_attachbar"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:background="@drawable/back_btn_press_bg">

        <FrameLayout
            android:id="@+id/left_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="10dp">

            <TextView
                android:id="@+id/leftbar"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_margin="5dp"
                android:background="@drawable/back_selector" />

            <TextView
                android:id="@+id/tip"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:layout_gravity="top|right"
                android:layout_margin="5dp"
                android:background="@mipmap/tip"
                android:visibility="gone" />
        </FrameLayout>

        <TextView
            android:id="@+id/attachbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_toRightOf="@+id/left_layout"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:visibility="gone" />
    </RelativeLayout>

    <TextView
        android:id="@+id/middlebar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textColor="@color/white"
        android:textSize="@dimen/textSize_title_18"
        android:visibility="gone" />

    <TextView
        android:id="@+id/rightLactionbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="50dp"
        android:drawablePadding="6dp"
        android:drawableRight="@drawable/btn_arrow_location_bg"
        android:gravity="center_vertical"
        android:textColor="@color/white"
        android:textSize="@dimen/textSize_title_16"
        android:visibility="gone" />

    <TextView
        android:id="@+id/rightbar"
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:gravity="center_vertical"
        android:textColor="@color/white"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/rightTextbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:gravity="center_vertical"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:visibility="gone" />


</RelativeLayout>